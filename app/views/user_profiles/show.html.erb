<div class="jumbotron center col-xs-12">

  <div class="row">
    <div class="col-xs-12 col-md-3">  
      <% if @user_profile.image? %>
        <%= image_tag @user_profile.image.thumb, class: 'img-responsive center-block img-rounded' %>
      <% else %>
        <img src="https://www.eyeem.com/node-static/img/profile-placeholder.jpg">
      <% end %>
    </div>
    <div class="col-xs-12 col-md-9">

      <% if current_user.user_profile.id  === @user_profile.id %>

          <div class="media-body">
          <h1 class="media-heading"> Welcome <%= @user_profile.name   %> ! </h1>
          <h2>Phone Number on recond: <%= @user_profile.number  %></h2>
          <h2>Current Team: <%= @user_profile.team.name  %></h2>
          <h5>About me: <%= @user_profile.description  %></h5>
          <p><%= link_to "Edit Profile", edit_user_profile_path(@user_profile.id)  %></p>

          </div>

      <% else %>

        <div class="media-body">
          <h1 class="media-heading"><%= @user_profile.name   %>'s Profile</h1>
          <h2>Phone Number on recond: <%= @user_profile.number  %></h2>
          <h5>About <%=@user_profile.name  %>: <%= @user_profile.description  %></h5> 
           !!!  
        </div>
      <% end %>
    </div>
  </div>
</div>