<!DOCTYPE html>
<body class="background">
<div class="container">
  <div class="row">

    <div class="col-xs-6 center_box">
    <h1>SportHub</h1>
    



    </div>

          <div class="col-xs-3 center_box">
         <h3>Upcoming Events:</h3>
           <%  @events.each do |event| %>
              <div class="panel panel-default">
               <div class="panel-heading">
                  <h3 class="panel-title"><%= event.date_time.strftime("%b")  %> <%= event.date_time.strftime("%d")  %> <%= event.date_time.strftime("%Y")  %></h3>
                </div>
                <div class="panel-body">
                  <%= event.name %>
                </div>
              </div>
            <% end %>
          </div>


<!--     <div class="col-xs-1"></div> -->

  </div>

</div>
</body>
</html>